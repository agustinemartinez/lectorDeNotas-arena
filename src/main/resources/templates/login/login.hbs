<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Login form</title>
    <base href="http://localhost:9000/login/">
    <meta name="intercoolerjs:use-actual-http-method" content="true"/>
    
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="https://intercoolerreleases-leaddynocom.netdna-ssl.com/intercooler-1.2.1.min.js"></script>
    <script src="js/model.js"></script>

    <link href="css/style.css" rel="stylesheet">
      
    </style>
  </head>

  <body>

    <div class="login-box">
      <img src="https://banner2.kisspng.com/20180531/wxl/kisspng-avatar-computer-icons-logo-photographer-5b102d1e728c13.7251972015277867824692.jpg" class="avatar">
      <h1>Iniciar sesion</h1>
      <form id="formulario" ic-post-to="/login">
        <!-- USERNAME INPUT -->
        <label for="username">Usuario</label>
        <input type="text" name="user" id="user" placeholder="Ingresar usuario">

        <!-- PASSWORD INPUT -->
        <label for="password">Contraseña</label>
        <input type="password" name="pass" id="pass" placeholder="Ingresar contraseña">
        <input type="submit" value="Ingresar" >
      </form>
    </div>
  </body>
</html>